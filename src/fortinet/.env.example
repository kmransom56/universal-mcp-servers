# SSL Configuration
FORTIGATE_VERIFY_SSL=false  # Set to true if using trusted certificates

# API Configuration
FORTIGATE_API_TIMEOUT=30  # API request timeout in seconds
FORTIGATE_MAX_RETRIES=3   # Number of retry attempts for failed requests

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
