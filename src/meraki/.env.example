# Meraki MCP Server Configuration

# Meraki Dashboard API Key
# Generate at: Organization > Settings > Dashboard API access
MERAKI_API_KEY=your-meraki-api-key-here

# Optional: Custom API Base URL
# MERAKI_BASE_URL=https://api.meraki.com/api/v1

# API Configuration
MERAKI_API_TIMEOUT=30  # API request timeout in seconds
MERAKI_MAX_RETRIES=3   # Number of retry attempts for failed requests
MERAKI_RATE_LIMIT_DELAY=0.2  # Delay between requests (seconds) to avoid rate limiting

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Organization IDs (for quick reference)
# These are not required for the server to function
# ORG_RESTAURANT_CHAIN_1=123456
# ORG_RESTAURANT_CHAIN_2=234567
# ORG_CORPORATE=345678
